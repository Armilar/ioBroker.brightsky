{
    "i18n": true,
    "type": "panel",
    "items": {
        "position": {
            "type": "coordinates",
            "label": "position",
            "disabled": "data.dwd_station_id || data.wmo_station",
            "autoInit": true,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "maxDistance": {
            "type": "number",
            "label": "maxDistance",
            "default": 50000,
            "min": 1000,
            "step": 1,
            "unit": "m",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },       
        "pollIntervalCurrently": {
            "type": "number",
            "label": "pollIntervalCurrently",
            "default": 60,
            "min": 10,
            "step": 1,
            "unit": "minutes",
            "disabled": "!data.createCurrently",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "pollInterval": {
            "type": "number",
            "label": "pollInterval",
            "default": 1,
            "min": 1,
            "max": 24,
            "step": 1,
            "unit": "hours",
            "disabled": "!data.createHourly",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "staticLink1": {
                    "type": "staticLink",
                    "text": "wmo_station_link",
                    "href": "https://opendata.dwd.de/climate_environment/CDC/help/stations_list_CLIMAT_data.txt",
                    "icon": "info",
                    "newLine": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
        "wmo_station": {
            "type": "text",
            "label": "wmo_station",
            "disabled": "data.dwd_station_id",
            "default": "",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        }, 
        "staticLink2": {
                    "type": "staticLink",
                    "text": "dwd_station_id_link",
                    "href": "https://www.dwd.de/DE/leistungen/klimadatendeutschland/stationsuebersicht.html",
                    "icon": "info",
                    "newLine": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
        "dwd_station_id": {
            "type": "text",
            "label": "dwd_station_id",
            "disabled": "data.wmo_station",
            "default": "",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        }, 
        "hours": {
            "type": "number",
            "label": "Hours-to-display",
            "default": 12,
            "min": 0,
            "max": 48,
            "disabled": "!data.createHourly",
            "unit": "hours",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "createCurrently": {
            "type": "checkbox",
            "label": "createCurrently",
            "default": true,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "createHourly": {
            "type": "checkbox",
            "label": "createHourly",
            "default": true,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "createDaily": {
            "type": "checkbox",
            "label": "createDaily",
            "default": true,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        }     
    }
}